elements-dir: /etc/nodepool/elements
images-dir: /opt/nodepool/images

zookeeper-servers:
{% if 'zookeeper' in groups %}
{% for host in groups['zookeeper'] %}
  - host: '{{ hostvars[host].ansible_host | ipwrap }}'
    port: 2181
{% endfor %}
{% endif %}

labels:
  - name: ubuntu-bionic
    min-ready: 1

providers:
  - name: openstackzuul
    cloud: openstackzuul
    diskimages:
      - name: ubuntu-bionic
        config-drive: true
    pools:
      - name: main
        max-servers: 10
        labels:
          - name: ubuntu-bionic
            diskimage: ubuntu-bionic
            min-ram: 8192
            console-log: true

diskimages:
  - name: ubuntu-bionic
    elements:
      - ubuntu-minimal
      - growroot
      - openssh-server
      - simple-init
      - vm
      - zuul-worker
    release: bionic
    env-vars:
      TMPDIR: /opt/nodepool/tmp
      DIB_CHECKSUM: '1'
      DIB_DEBIAN_COMPONENTS: 'main,universe'
      DIB_IMAGE_CACHE: /opt/nodepool/cache
