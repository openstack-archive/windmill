images-dir: /opt/nodepool/images

zookeeper-servers:
{% if 'zookeeper' in groups %}
{% for host in groups['zookeeper'] %}
  - host: {{ hostvars[host].ansible_host }}
    port: 2181
{% endfor %}
{% else %}
  - host: 127.0.0.1
    port: 2181
{% endif %}

diskimages:
  - name: centos-7
    formats:
      - tar
    elements:
      - centos-minimal
      - vm
      - simple-init
      - growroot
    env-vars:
      DIB_CHECKSUM: '1'
  - name: ubuntu-trusty
    formats:
      - tar
    elements:
      - ubuntu-minimal
      - vm
      - simple-init
      - growroot
    release: trusty
    env-vars:
      DIB_CHECKSUM: '1'
      DIB_DEBIAN_COMPONENTS: 'main,universe'
  - name: ubuntu-xenial
    formats:
      - tar
    elements:
      - ubuntu-minimal
      - vm
      - simple-init
      - growroot
    release: xenial
    env-vars:
      DIB_CHECKSUM: '1'
      DIB_DEBIAN_COMPONENTS: 'main,universe'

labels:
  - name: centos-7
    min-ready: 1
  - name: ubuntu-trusty
    min-ready: 1
  - name: ubuntu-xenial
    min-ready: 1

providers:
  - name: devstack
    cloud: openstackzuul-devstack
    diskimages:
      - name: centos-7
        config-drive: true
        pause: True
      - name: ubuntu-trusty
        config-drive: true
        pause: True
      - name: ubuntu-xenial
        config-drive: true
        pause: True
    pools:
      - name: main
        max-servers: 10
        labels:
          - name: centos-7
            diskimage: centos-7
            min-ram: 8192
          - name: ubuntu-trusty
            diskimage: ubuntu-trusty
            min-ram: 8192
          - name: ubuntu-xenial
            diskimage: ubuntu-xenial
            min-ram: 8192
